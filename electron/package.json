{
  "name": "clawhq-desktop",
  "version": "1.0.0",
  "description": "ClawHQ Desktop — Your AI command center",
  "main": "main.js",
  "author": "ClawHQ",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "dev.clawhq.desktop",
    "productName": "ClawHQ",
    "copyright": "Copyright © 2026 ClawHQ",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "bridge.js",
      "tray-manager.js",
      "icon.png",
      "icon-256.png"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon-256.png",
      "artifactName": "ClawHQ-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "owner": "Malchiior",
      "repo": "clawhq"
    }
  }
}
