generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String?
  name          String?
  avatarUrl     String?
  googleId      String?   @unique
  plan          String    @default("free")
  stripeCustomerId String?
  stripeSubscriptionId String?
  
  businessName  String?
  brandColor    String    @default("#3b82f6")
  customDomain  String?
  customDomainVerified Boolean @default(false)
  customDomainToken    String?
  logoUrl       String?
  
  apiMode       String    @default("bundled") // "bundled" or "byok"
  
  maxAgents     Int       @default(1)
  maxChannels   Int       @default(1)
  dailyMsgLimit Int       @default(100)
  
  // Credit system â€” monthly allocation of free API credits (in USD cents)
  monthlyCredits   Int       @default(50)    // 50 = $0.50 free credits per month
  usedCredits      Int       @default(0)     // cents used this billing period
  creditResetDate  DateTime  @default(now()) // when credits reset next
  
  setupComplete Boolean   @default(false)
  setupStep     String?   // tracks current setup step
  
  emailVerified Boolean   @default(false)
  emailVerificationToken String?
  emailVerificationExpires DateTime?
  
  passwordResetToken   String?
  passwordResetExpires DateTime?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  agents        Agent[]
  channels      Channel[]
  apiKeys       ApiKey[]
  usageRecords  UsageRecord[]
  sessions      Session[]
  tickets       SupportTicket[]
  pageConfigs   UserPageConfig[]
}

model Session {
  id           String   @id @default(cuid())
  token        String   @unique
  refreshToken String   @unique
  expiresAt    DateTime
  refreshExpiresAt DateTime
  isRevoked    Boolean  @default(false)
  userAgent    String?
  ipAddress    String?
  lastUsedAt   DateTime @default(now())
  createdAt    DateTime @default(now())
  
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Agent {
  id            String      @id @default(cuid())
  name          String
  modelProvider String      @default("claude") // claude, openai, gemini, deepseek, grok
  model         String      @default("claude-sonnet-4-20250514")
  status        AgentStatus @default(STOPPED)
  containerId   String?
  containerPort Int?
  
  deployMode    DeployMode  @default(CLOUD)
  apiKey        String?     // Encrypted, null for bundled API mode
  usesBundledApi Boolean    @default(false)
  channels      String[]    @default([]) // Array of channel types
  webhookToken  String?     // Token for agent webhook callbacks
  
  systemPrompt  String?
  temperature   Float       @default(0.7)
  maxTokens     Int         @default(4096)
  skills        Json        @default("[]") // Array of enabled skill IDs
  
  totalMessages Int         @default(0)
  totalTokens   Int         @default(0)
  lastActiveAt  DateTime?
  lastHeartbeat DateTime?
  deployedAt    DateTime?
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  agentChannels ChannelAgent[]
  logs          AgentLog[]
  memories      AgentMemory[]
  snapshots     AgentSnapshot[]
  chatMessages  ChatMessage[]
}

model Channel {
  id            String        @id @default(cuid())
  type          ChannelType
  config        Json
  isActive      Boolean       @default(true)
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  userId        String
  user          User          @relation(fields: [userId], references: [id])
  channelAgents ChannelAgent[]
}

model ChannelAgent {
  id        String   @id @default(cuid())
  channelId String
  agentId   String
  channel   Channel  @relation(fields: [channelId], references: [id])
  agent     Agent    @relation(fields: [agentId], references: [id])
  
  @@unique([channelId, agentId])
}

model AgentLog {
  id        String   @id @default(cuid())
  level     String   @default("info")
  message   String
  metadata  Json?
  createdAt DateTime @default(now())
  
  agentId   String
  agent     Agent    @relation(fields: [agentId], references: [id])
}

model ApiKey {
  id        String      @id @default(cuid())
  provider  ApiProvider
  key       String      // Encrypted
  name      String?
  isActive  Boolean     @default(true)
  lastUsed  DateTime?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, provider])
}

model UsageRecord {
  id            String   @id @default(cuid())
  messages      Int      @default(0)
  inputTokens   Int      @default(0)
  outputTokens  Int      @default(0)
  costUsd       Float    @default(0)
  date          DateTime @default(now()) @db.Date
  
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  
  @@unique([userId, date])
}

model WaitlistEntry {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model BundledUsage {
  id           String   @id @default(cuid())
  provider     String
  date         DateTime @db.Date
  totalTokens  Int      @default(0)
  costUsd      Float    @default(0)
  requestCount Int      @default(0)
  createdAt    DateTime @default(now())
  
  @@unique([provider, date])
}

model AgentMemory {
  id        String   @id @default(cuid())
  filePath  String   // Relative path in agent workspace (e.g., "MEMORY.md", "memory/2026-02-13.md")
  content   String   // File content
  fileSize  Int      @default(0)
  checksum  String?  // MD5 hash for content verification
  isActive  Boolean  @default(true) // False for deleted/archived files
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  agentId   String
  agent     Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  
  @@unique([agentId, filePath])
  @@index([agentId, isActive])
}

model AgentSnapshot {
  id          String   @id @default(cuid())
  snapshotType String  @default("restart") // "restart", "manual", "scheduled"
  description String?
  memoryFiles Json     // Array of {filePath, content, checksum} objects
  config      Json?    // Agent configuration at time of snapshot
  metadata    Json?    // Additional metadata (memory size, file count, etc.)
  
  createdAt   DateTime @default(now())
  
  agentId     String
  agent       Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  
  @@index([agentId, createdAt])
}

model InviteCode {
  id          String    @id @default(cuid())
  code        String    @unique
  maxUses     Int       @default(1)
  usedCount   Int       @default(0)
  note        String?   // Admin note (e.g., "ProductHunt launch batch")
  createdBy   String?   // Admin user ID who created it
  expiresAt   DateTime?
  isActive    Boolean   @default(true)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  redemptions InviteRedemption[]
}

model InviteRedemption {
  id           String   @id @default(cuid())
  inviteCodeId String
  userId       String
  redeemedAt   DateTime @default(now())
  
  inviteCode   InviteCode @relation(fields: [inviteCodeId], references: [id])
  
  @@unique([inviteCodeId, userId])
}

enum DeployMode {
  CLOUD       // Docker container hosted by ClawHQ
  LOCAL       // Local Connector via WebSocket relay
  DASHBOARD   // Dashboard-only with bundled API (no external deploy)
}

enum AgentStatus {
  RUNNING
  STOPPED
  STARTING
  ERROR
  DEPLOYING
}

enum ChannelType {
  TELEGRAM
  WHATSAPP
  DISCORD
  SLACK
  IMESSAGE
  TEAMS
}

model SupportTicket {
  id          String       @id @default(cuid())
  subject     String
  category    String       @default("general") // general, billing, technical, feature, bug
  priority    TicketPriority @default(NORMAL)
  status      TicketStatus @default(OPEN)
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  closedAt    DateTime?
  
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages    TicketMessage[]
  
  @@index([userId, status])
  @@index([status, createdAt])
}

model TicketMessage {
  id          String   @id @default(cuid())
  content     String
  isStaff     Boolean  @default(false)
  senderName  String?  // Staff name when isStaff=true
  
  createdAt   DateTime @default(now())
  
  ticketId    String
  ticket      SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  @@index([ticketId, createdAt])
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  WAITING_ON_USER
  RESOLVED
  CLOSED
}

enum TicketPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

model ChatMessage {
  id        String   @id @default(cuid())
  role      String   // "user" or "assistant"
  content   String
  metadata  Json?    // Optional metadata (tokens used, model, etc.)
  
  createdAt DateTime @default(now())
  
  agentId   String
  agent     Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  userId    String
  
  @@index([agentId, createdAt])
  @@index([userId, agentId])
}

enum ApiProvider {
  OPENAI
  ANTHROPIC
  GOOGLE
  DEEPSEEK
  GROK
}

model UserPageConfig {
  id          String   @id @default(cuid())
  slug        String   // URL path segment (e.g. "tasks", "notes")
  label       String   // Display name
  icon        String   @default("FileText") // Lucide icon name
  templateId  String?  // Template this was created from
  sortOrder   Int      @default(0)
  pinned      Boolean  @default(false) // Pinned pages can't be removed (Chat, Agents)
  archived    Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, slug])
  @@index([userId, archived, sortOrder])
}
